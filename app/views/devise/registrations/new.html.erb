<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'user-input' %>
  </div>

  <div class="field input">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'user-input' %>
  </div>

  <div class="field input">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'user-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'devise-btn btn btn-outline-primary my-2 my-sm-0' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
